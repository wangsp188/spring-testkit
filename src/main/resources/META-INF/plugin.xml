    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>
    <depends>Git4Idea</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <!-- Register LineMarkerProvider -->
        <codeInsight.lineMarkerProvider language="JAVA" implementationClass="com.nb.tools.spring_cache.SpringCacheIconProvider"/>
        <codeInsight.lineMarkerProvider language="JAVA" implementationClass="com.nb.tools.flexible_test.FlexibleTestIconProvider"/>
        <codeInsight.lineMarkerProvider language="JAVA" implementationClass="com.nb.tools.call_method.CallMethodIconProvider"/>

        <java.programPatcher implementation="com.nb.SideServerJavaProgramPatcher" />
        <toolWindow id="ZCC No-Bug" icon="/icons/no-bug.svg" factoryClass="com.nb.view.PluginToolWindowFactory" anchor="right"/>
<!--icon="PlatformDebuggerImplIcons.MemoryView.Active"-->
        <!-- Here you can register other extensions, for example, actions -->
    </extensions>

    <actions>
        <action id="nb_log_to_link" class="com.nb.links.Log2LinksAction" text="nb_log_to_link"
                description="Processes the selected text and copies the results to clipboard">
            <add-to-group group-id="ConsoleView.PopupMenu" anchor="first"/>
        </action>
        <action id="nb_popup_log_to_link" class="com.nb.links.Log2LinksWebViewAction" text="nb_popup_log_to_link"
                description="Processes the selected text and copies the results to clipboard">
            <add-to-group group-id="ConsoleView.PopupMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>